<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="AddDepartmentSequence" author="stéphan.minko">
        <createSequence sequenceName="department_sequence" cycle="false" minValue="1" startValue="1" incrementBy="1"/>
    </changeSet>
    <changeSet id="CreateDepartmentTable" author="Stéphan.Minko">
        <createTable tableName="data.departments">
            <column name="ID" type="bigint" defaultValueComputed="nextval('department_sequence')">
                <constraints primaryKey="true"/>
            </column>
            <column name="DEPARTMENT_NAME" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="VERSION" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

